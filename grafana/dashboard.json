{
  "dashboard": {
    "title": "Country Explorer API - Security & Performance",
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Total Requests (Last 5min)",
        "type": "stat",
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(increase(http_requests_total[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 1000, "color": "yellow" },
                { "value": 5000, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Rate Limit Blocks (Last 5min)",
        "type": "stat",
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(increase(rate_limit_blocks_total[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 10, "color": "yellow" },
                { "value": 50, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Active Connections",
        "type": "gauge",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "active_connections",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "max": 100,
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 50, "color": "yellow" },
                { "value": 80, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Requests Over Time",
        "type": "graph",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(http_requests_total[1m])",
            "legendFormat": "{{method}} {{endpoint}} {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "label": "Requests/sec", "format": "short" },
          { "format": "short" }
        ]
      },
      {
        "id": 5,
        "title": "Rate Limit Blocks Over Time",
        "type": "graph",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(rate_limit_blocks_total[1m])",
            "legendFormat": "{{ip}} - {{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "label": "Blocks/sec", "format": "short" },
          { "format": "short" }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": { "params": [10], "type": "gt" },
              "query": { "params": ["A", "5m", "now"] }
            }
          ],
          "name": "High Rate Limit Blocks"
        }
      },
      {
        "id": 6,
        "title": "Response Time (p95)",
        "type": "graph",
        "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "label": "Seconds", "format": "s" },
          { "format": "short" }
        ]
      },
      {
        "id": 7,
        "title": "Top Blocked IPs",
        "type": "table",
        "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "topk(10, sum by (ip) (rate_limit_blocks_total))",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": { "Time": true },
              "indexByName": {},
              "renameByName": {
                "ip": "IP Address",
                "Value": "Total Blocks"
              }
            }
          }
        ]
      },
      {
        "id": 8,
        "title": "Requests by Status Code",
        "type": "piechart",
        "gridPos": { "x": 0, "y": 20, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "sum by (status) (rate(http_requests_total[5m]))",
            "refId": "A"
          }
        ]
      },
      {
        "id": 9,
        "title": "Requests by Endpoint",
        "type": "bargauge",
        "gridPos": { "x": 8, "y": 20, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "sum by (endpoint) (rate(http_requests_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 10,
        "title": "Attack Heatmap (Rate Limit Blocks)",
        "type": "heatmap",
        "gridPos": { "x": 16, "y": 20, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "sum(increase(rate_limit_blocks_total[1m]))",
            "refId": "A"
          }
        ],
        "dataFormat": "timeseries",
        "yAxis": {
          "format": "short"
        }
      }
    ],
    "templating": {
      "list": []
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
    }
  }
}
